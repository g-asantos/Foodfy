<!DOCTYPE html>
<html>

    <head>
        <title>Foodfy</title>
        <link rel="stylesheet" href="/styles/UserStyles.css">

    </head>

    <body>

        {%include 'parts/header.njk'%}

        <section>
            <div class="adminContainer">
                <h1>Usu√°rios</h1>

                <form action="/users/admin/register" method='get' id='newUser'>
                <button type='submit' class='edit master' form='newUser' id='save'>Novo</button>
                 
                </form>
                
                
            </div>

            {%include 'parts/messages.njk'%}
                <div class="allUsers">
                {%for result in results%}
                    <div class="listContainer">
                        <div class="detailsContainer">
                            <div class='item'>
                                <div>{{result.name}}</div>

                            </div>

                            <div class='item2'>
                                <div>{{result.email}}</div>

                            </div>
                        </div>
                        <div class="buttons">
                            <a href="/users/admin/{{result.id}}/edit">Editar</a>

                            <form id='delete_{{result.id}}' method="POST" action='/users/admin/users/{{result.id}}?_method=DELETE'>
                                <button class='cancel' type="submit" form='delete_{{result.id}}'>Deletar</button>
                                <input type="hidden" name="id" value={{result.id}}>
                                <input type="hidden" name="is_admin" value={{result.is_admin}}>
                                
                            </form>
                            
                        </div>

                    </div>
                    
                    {%endfor%}
                
                    </div>
                    

            </body>

        </html>