<!DOCTYPE html>
<html>

    <head>
        <title>Foodfy</title>
        {%include 'parts/styles.njk'%}

    </head>

    <body>

        {%include 'parts/headerBlack.njk'%}

        <section>
            <div class="adminContainer">
                <h1>Criando chef</h1>
                <button class='edit' type="submit" form='creationChef'>Salvar chef</button>
            </div>

            <form id='creationChef' method='POST' action="/chefs" enctype='multipart/form-data'>
                
 
                <div class='item'>
                    <div>Nome</div>
                    <input type="text" name="name" id="">
                </div>
                <div class='item'>
                    <div>Avatar</div>
                    <div id="photo-upload-chef">
                        <input 
                        type="file" 
                        name="photos" 
                        id="photo-input-chef" 
                        onchange='chefsPhotosUpload.handleFileInput(event)'
                        accept='image/*' 
                        >
                        
                        <p>Enviar Avatar</p>
                        <div id="photos-chef-preview"></div>
                    </div>
                </div>
               
                
            <script src="/photosUpload.js"></script>
        </body>

    </html>